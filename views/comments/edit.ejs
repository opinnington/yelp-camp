<% include ../partials/header %>
<div class="container">
    <div clas="row">
        <h1 style="text-align: center;">Edit Comment</h1>
        <div style="width: 30%; margin: 25px auto;">
            <p><%= campground._id %></p>
            <form 
                action="/campgrounds/<%= campground %>/comments/<%= comment._id %>?_method=PUT" 
                method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                     <button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a></a>
        </div>  
    </div>
</div>
<% include ../partials/footer %>